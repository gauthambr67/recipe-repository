<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Course</th>
      <th>Serves</th>
      <th>Cooktime</th>
      <th>Ingredients</th>
      <th>Instructions</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
    <% recipes.forEach(function(r){ %>
    <tr>
      <td><%= r.title %></td>
      <td><%= r.course %></td>
      <td><%= r.serves %></td>
      <td><%= r.cookTime %></td>
      <td><%= r.ingredients %></td>
      <td><%= r.cookInst %></td>

      <td>
        <form id="delete-recipe" action="/recipes/<%= r._id %>" method="POST">
          <input type="submit" value="Delete Recipe" />
        </form>
      </td>
      <td>
        <form
          id="view-reviews"
          action="/reviews/recipes/<%= r._id %>/reviews"
          method="GET"
        >
          <input type="submit" value="View Reviews" />
        </form>
        <td>
          <form
            id="add-reviews"
            action="/reviews/recipes/<%= r._id %>/reviews"
            method="GET"
          >
            <input type="submit" value="Add Review" />
          </form>
      </td>
      </td>
    </tr>

    <% }); %>
  </tbody>
</table>

<%- include('../partials/footer') %>
